# ============================================================
# PolymarketBTC15mAssistant — Environment Configuration
# ============================================================
# Copy this file to .env and fill in your API keys.

# ── Server ───────────────────────────────────────────────
PORT=3000

# ── Polymarket Settings ──────────────────────────────────────
POLYMARKET_AUTO_SELECT_LATEST=true
POLYMARKET_SERIES_ID=10192
POLYMARKET_SERIES_SLUG=btc-up-or-down-15m
POLYMARKET_LIVE_WS_URL=wss://ws-live-data.polymarket.com

# ── Chainlink on Polygon (fallback price feed) ──────────────
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_RPC_URLS=https://polygon-rpc.com,https://rpc.ankr.com/polygon
POLYGON_WSS_URLS=wss://polygon-bor-rpc.publicnode.com
CHAINLINK_BTC_USD_AGGREGATOR=0xc907E116054Ad103354f2D350FD2514433D57F6f

# ── AI Model Configuration ──────────────────────────────────
# Primary provider: deepseek | openai (which model drives paper trading)
AI_PRIMARY_PROVIDER=deepseek
# How often to call AI models (seconds). Lower = more cost, fresher analysis.
AI_INTERVAL_SECONDS=30

# ── DeepSeek (default AI model) ──────────────────────────────
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat

# ── OpenAI (secondary AI model — o3) ──────────────────────────────
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=o3

# ── Proxy Support (optional) ────────────────────────────────
# HTTPS_PROXY=http://127.0.0.1:8080
# HTTP_PROXY=http://127.0.0.1:8080
# ALL_PROXY=socks5://127.0.0.1:1080
